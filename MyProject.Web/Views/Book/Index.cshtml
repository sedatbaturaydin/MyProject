@model IEnumerable<MyProject.Application.DTOs.BookDto>

<h2>Books</h2>

<div class="action-container">
    <form action="/Book/Create">
        <button type="submit" class="button-primary">+ Add New</button>
    </form>

    <form action="/Book/SeedData" method="post">
        <button type="submit" class="button-primary">Generate Books</button>
    </form>
</div>

<br />

<table class="custom-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>
                    <div class="button-group">
                        <form asp-action="Details" asp-controller="Book">
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" class="button-primary">Details</button>
                        </form>
                        <form asp-action="Delete" asp-controller="Book" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" class="button-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #4f2b61;
        background-color: #f8f9fa;
    }

    .action-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        background: #FCD9FF;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .custom-table th {
            background-color: #4f2b61;
            color: #FCD9FF;
            padding: 12px;
            text-align: left;
            font-weight: bold;
        }

        .custom-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .custom-table tr:hover {
            background-color: #c37dc9;
        }

    .button-group {
        display: flex;
        gap: 10px;
    }

    .button-primary, .button-danger {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .button-primary {
        background-color: #4f2b61;
        color: #FCD9FF;
    }

        .button-primary:hover {
            background-color: #673c7a;
        }

    .button-danger {
        background-color: red;
        color: #FCD9FF;
    }

        .button-danger:hover {
            background-color: darkred;
        }
</style>
